[Unit]
Description=Aircraft Detection System with ADS-B
After=network.target readsb.service

[Service]
ExecStart=/usr/bin/python3 /home/aircraft-detector/aircraft-detector/pi-aircraft-detector.py --web --web-port 8081 --enable-adsb
WorkingDirectory=/home/aircraft-detector/aircraft-detector
StandardOutput=inherit
StandardError=inherit
Restart=always
User=aircraft-detector

[Install]
WantedBy=multi-user.target
